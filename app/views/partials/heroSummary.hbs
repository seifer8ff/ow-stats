<article class="col-xs-6 col-sm-4 col-md-3 fade-in" id="{{hero.normalizedName}}">
	<span class="glyphicon glyphicon-remove-circle hero-remove" aria-hidden="true" data-hero="{{hero.normalizedName}}"></span>
	<a href="/hero?name={{hero.normalizedName}}" class="hero panel">
		<div class="title-container summary">
			<div class="overlay {{hero.normalizedName}}"></div>
			<div class="hero-icon ohi-{{hero.normalizedName}}"></div>
			<h3 class="hero-name">{{hero.name}}</h3>
		</div>
		<hr class="tight">
		<div class="body">
			{{#if hero.stats.playtime.value}}
				{{> stats}}
			{{else}}
				{{> noPlaytime}}
			{{/if}}
		</div>
	</a>
</article>