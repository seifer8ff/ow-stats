<header>
	{{> header}}
</header>
<main>
	<span id="ow-bg"></span>

	{{!-- <div class="container">
		<div class="jumbotron hidden fade-in" id="page-error">
			<h2 class="text-center">Page Not Found</h2>
			<hr>
			<p class="text-center">Something went wrong. The page you're looking for cannot be found.</p>
		</div>
	</div> --}}

	<div class="container hero-container">
		<div class="row">
			<article class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-0 col-md-5 col-lg-4 panel panel-default hero-section fade-in" id="{{ thisHero.normalizedName }}">
				<h1>{{thisHero.name}}</h1>
				<hr class="visible-xs">
				<img class="visible-xs img-rounded img-responsive hero-img fade-in" src="../img/ow-{{ thisHero.normalizedName }}-full.jpg">
				<hr>
				<dl class="dl-horizontal">
					<dt>Real Name</dt>
					<dd>{{thisHero.data.realName}}</dd>
					{{#if thisHero.data.age}}
						<dt>Age</dt>
						<dd>{{thisHero.data.age}}</dd>
					{{/if}}
					{{#if thisHero.data.affiliation}}
						<dt>Prior Affiliation</dt>
						<dd>{{thisHero.data.affiliation}}</dd>
					{{/if}}
					{{#if thisHero.data.base}}
						<dt>Base of Operations</dt>
						<dd>{{thisHero.data.base}}</dd>
					{{/if}}
				</dl>
				<hr>
				<p>{{thisHero.data.description}}</p>
				<hr>
				<h4 id="hero-health">Health: {{thisHero.data.health}}</h4>
				{{#if thisHero.data.armor}}
					<h4 id="hero-armor">Armor: {{thisHero.data.armor}}</h4>
				{{/if}}
				{{#if thisHero.data.shield}}
					<h4 id="hero-shield">Shield: {{thisHero.data.shield}}</h4>
				{{/if}}
				{{#if noUser }}
					{{> noStats}}
				{{else}}
					{{#if thisHero.stats.playtime}}
						{{> stats thisHero heroPage=true}}
					{{else}}
						{{> noPlaytime}}
					{{/if}}
				{{/if}}
				<div class="hero-link">
					<hr>
					<a href="/">Back to Heroes</a>
				</div>
			</article>
			<aside class="hidden-xs col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-0 col-md-6 col-md-offset-1 col-lg-7 col-lg-offset-1 hero-aside">
				<img class="img-rounded img-responsive hero-img fade-in" src="../img/ow-{{ thisHero.normalizedName }}-full.jpg">
			</aside>
		</div>
	</div>
</main>